{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "include": [
    "vite.config.ts", // Vite 설정 파일 포함
    "src/**/*" // src 폴더 내의 모든 TypeScript 파일 포함
  ]
}
